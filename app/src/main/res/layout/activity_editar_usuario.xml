<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Editar_Usuario"
    android:background="@color/white">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/regreso"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="300dp"
            android:src="@mipmap/verde" />

        <ImageView
            android:src="@mipmap/recusu"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"/>
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Perfil de Usuario"
        android:layout_marginTop="3dp"
        android:textColor="@color/principal_green"
        android:textStyle="bold"
        android:textSize="32sp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_marginTop="2sp"
        android:background="@drawable/round_grayback">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario"
            android:textStyle="bold"
            android:textColor="@color/blacki"
            android:textSize="18sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User123"
            android:textColor="@color/blacki"
            android:gravity="center"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/nombre_usuario"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="@string/nom"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/textwithe"/>
        <EditText
            android:id="@+id/biografia"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint=" Biografia o estado"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/textwithe"/>
        <EditText
            android:id="@+id/cuenta_algo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint=" Cuenta algo sobre ti"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/textwithe"/>
        <EditText
            android:id="@+id/link"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Inserta link o enlace"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/textwithe"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:gravity="center"
            android:textColor="@color/blacki"
            android:textStyle="bold"
            android:text="Guardar Cambios"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center"
            android:textColor="@color/blacki"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Ver fotografia"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center"
            android:textColor="@color/blacki"
            android:textStyle="bold"
            android:text="Tomar fotografia"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center"
            android:textColor="@color/blacki"
            android:textStyle="bold"
            android:text="Escoger galeria"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>