<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Favoritos"
    android:background="@color/white">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/regreso"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="300dp"
            android:src="@mipmap/verde" />

        <ImageView
            android:src="@mipmap/recusu"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"/>
    </GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Favoritos"
        android:layout_marginTop="3dp"
        android:layout_marginRight="62dp"
        android:layout_marginLeft="62dp"
        android:textColor="@color/principal_green"
        android:textStyle="bold"
        android:textSize="32sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Todos tus favoritos de la app"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="62dp"
        android:layout_marginLeft="62dp"
        android:textColor="@color/blacki"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_marginTop="2sp"
        android:background="@drawable/fondoredond">

        <GridView
            android:id="@+id/reminders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:numColumns="1" />

    </LinearLayout>
</LinearLayout>