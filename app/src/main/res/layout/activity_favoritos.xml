<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Favoritos"
    android:background="@color/white">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/regreso"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="300dp"
            android:src="@mipmap/verde" />

        <ImageView
            android:src="@mipmap/recusu"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"/>
    </GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Favoritos"
        android:layout_marginTop="3dp"
        android:layout_marginRight="62dp"
        android:layout_marginLeft="62dp"
        android:textColor="@color/principal_green"
        android:textStyle="bold"
        android:textSize="32sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Todos tus favoritos de la app"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="62dp"
        android:layout_marginLeft="62dp"
        android:textColor="@color/blacki"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_marginTop="2sp"
        android:background="@drawable/fondoredond">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/fondo"
                android:paddingVertical="10dp"
                android:columnCount="2"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/nicoletta"/>

                <GridLayout

                    android:layout_width="265dp"
                    android:layout_height="88dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Practice"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="Everyday"
                        android:textColor="@color/white"
                        android:textSize="10sp" />


                </GridLayout>

            </GridLayout>

        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/fondo"
                android:paddingVertical="10dp"
                android:columnCount="2"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/resertt"/>

                <GridLayout

                    android:layout_width="265dp"
                    android:layout_height="88dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Practice"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="Everyday"
                        android:textColor="@color/white"
                        android:textSize="10sp" />


                </GridLayout>

            </GridLayout>

        </ScrollView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/fondo"
                android:paddingVertical="10dp"
                android:columnCount="2"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/sunandsky"/>

                <GridLayout

                    android:layout_width="265dp"
                    android:layout_height="88dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Practice"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="Everyday"
                        android:textColor="@color/white"
                        android:textSize="10sp" />


                </GridLayout>

            </GridLayout>

        </ScrollView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/fondo"
                android:paddingVertical="10dp"
                android:columnCount="2"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/monaquillos"/>

                <GridLayout

                    android:layout_width="265dp"
                    android:layout_height="88dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Practice"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="Everyday"
                        android:textColor="@color/white"
                        android:textSize="10sp" />


                </GridLayout>

            </GridLayout>

        </ScrollView>

    </LinearLayout>
</LinearLayout>