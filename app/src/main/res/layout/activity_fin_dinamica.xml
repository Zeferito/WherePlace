<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/degradado"
    tools:context=".Fin_Dinamica">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/fondo"
            android:paddingVertical="10dp"
            android:columnCount="2"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Practice"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Everyday"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </GridLayout>

    </ScrollView>

    <TextView
        android:id="@+id/mensaje"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="100sp"
        android:background="@color/gray_light"
        android:text="Â¡La Opcion dos ha ganado!
                      Restaurante El Paseo 444
                      Calle Juan madero "
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnsabermas"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="40sp"
        android:drawableBottom="@drawable/round_button"
        android:text="Saber mas sobre este sitio"
        android:textSize="12sp" />
    <Button
        android:id="@+id/btnintentar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:drawableBottom="@drawable/round_button"
        android:text="Intentar de nuevo"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnvolverinicio"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:drawableBottom="@drawable/round_button"
        android:text="Volver a inicio"
        android:textSize="12sp" />

</LinearLayout>