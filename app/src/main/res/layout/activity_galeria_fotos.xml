<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GaleriaFotos"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:orientation="vertical">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/regreso"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="300dp"
                android:src="@mipmap/verde" />

            <ImageView
                android:src="@mipmap/recusu"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"/>
        </GridLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â° Cancun, Quintana Roo"
        android:layout_gravity="center"
        android:textColor="@color/principal_green"
        android:background="@color/gray_light"
        android:padding="10sp"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:textStyle="italic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galeria de fotos"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/principal_green"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Observa la galeria de fotos de Quintana Roo"
        android:textColor="@color/blacki"
        android:textSize="15sp"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="30sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:background="@drawable/fondoredond"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="169dp"
                    android:layout_height="226dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:src="@mipmap/lagunaturistico" />

                <ImageView
                    android:layout_width="169dp"
                    android:layout_height="226dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:src="@mipmap/cascadaturistico" />
                <ImageView
                    android:layout_width="169dp"
                    android:layout_height="226dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:src="@mipmap/playatarde" />
                <ImageView
                    android:layout_width="169dp"
                    android:layout_height="226dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:src="@mipmap/archipielagoturistico" />
                <ImageView
                    android:layout_width="169dp"
                    android:layout_height="226dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:src="@mipmap/cuevaturistico" />
                <ImageView
                    android:layout_width="169dp"
                    android:layout_height="226dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:src="@mipmap/playaturistico" />

            </GridLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>